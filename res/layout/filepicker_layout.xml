<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/filepicker_directoryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Directory Dummy"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="true" />

    <View
        android:id="@+id/filepicker_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/filepicker_directoryTextView"
        android:background="@android:color/darker_gray" />

    <ListView
        android:id="@+id/filepicker_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filepicker_divider" >

    </ListView>

</RelativeLayout>